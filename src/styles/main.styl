* {
	box-sizing: border-box;
	transition: all 0.4s ease;
}

html, body {
	font-family: 'Open Sans', sans-serif;
	font-size: 16px;
	font-weight: 400;
	color: $main-color;
	scroll-behavior: smooth;
}

.container {
	max-width: 1200px;
	margin: 0 auto;
	width: 100%;
	padding-left: 15px;
	padding-right: 15px;
}

.header {
	//min-height: 100vh;
