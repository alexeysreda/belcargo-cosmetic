}

.header__link_wrapper {
    width: 47px;
    height: 47px;
    border-radius: 50%;
    background: $blue-gradient;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 15px;
}

.header__menu {
    border: none;
    outline: none;
    background-color: transparent;
    &:hover, &:focus {
