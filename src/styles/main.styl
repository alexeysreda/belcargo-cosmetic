.link {
	display: flex;
	justify-content: center;
	align-items: center;
	color: $white-color;
	background: $red-gradient;
	font-weight: 600;
	font-size: 18px;
	border: none;
	outline: none;
	width: 360px;
	height: 70px;
	border-radius: 4px;
	box-shadow: 0 10px 25px -10px #BB0833;
	&:hover, &:focus {
		cursor: pointer;
		transform: translateY(-5px);
		box-shadow: 0 10px 25px 0 #BB0833;

	}
	&:active {
		background: linear-gradient(90deg, rgba(200, 17, 66, 1) 0%, rgba(167, 8, 51, 1) 100%);
	}
}

.lines {
	position: absolute;
	content: '';
	width: 30px;
	height: 2px;
	background: $red-gradient;
	left: -20px;
	top: 30px;
	z-index: -1;
	&::before {
		content: '';
		position: absolute;
		background: $red-gradient;
		width: 16px;
		height: 2px;
		top: -5px;
		left: 14px;
	}
	&::after {
		content: '';
		position: absolute;
		background: $red-gradient;
		width: 22px;
		height: 2px;
		top: 5px;
		left: 5px;
	}
}

