@import 'reset.css';
@import '__fonts.styl';
@import '__variables.styl';
* {
    box-sizing: border-box;
}

html, body {
    font-family: 'Open Sans', sans-serif;
    font-size: 16px;
    font-weight: 400;
    color: $main-color;
    scroll-behavior: smooth;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    padding-left: 15px;
    padding-right: 15px;
}

.header {
    //min-height: 100vh;
    display: flex;
    flex-direction: column;
    //background: linear-gradient(110deg, transparent 0%, transparent 74%, red 74%, red 75%, blue 75%, blue 100%)
    background: url('../img/header-bg.png') no-repeat center center;
    background-size: cover;
}

.header__ul {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 95px;
    //margin-top: 18px;
