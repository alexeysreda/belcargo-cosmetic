.modal {
	border: 10px solid transparent;
	border-image-source: $red-gradient;
	border-image-slice: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: center;
	padding: 40px 60px;
	border-radius: 4px;
	background-color: #fff;
	width: auto;
	max-width: 500px;
	margin: 20px auto;
	position: relative;
}

.modal a {
	color: #03244E;
}


.modal__heading {
	font-weight: 700;
	font-size: 1.5rem;
	line-height: 2.0625rem;
	text-align: center;
	color: #03244E;
	margin-bottom: 55px;
}

.modal__input, .modal__textarea {
	margin-bottom: 20px;
	width: 100%;
	height: 70px;
	outline: none;
	border: 2px solid $blue-color;
	border-radius: 4px;
	padding: 25px 35px;
}

.modal__textarea {
	height: 160px;
}

.modal .link {
	width: 100%;
	margin-bottom: 15px;
}

.modal__text {
	font-weight: 400;
	font-size: 1.125rem;
	line-height: 1.5625rem;
	color: #03244E;
	position: relative;
	padding-left: 45px;
	margin-bottom: 40px;
	&::before {
		position: absolute;
		left: 0;
		top: 5px;
		content: url('../img/icons/modal-check.svg');
	}
	&_bold {
		font-weight: 700;
	}

	&_thanks::before {
		top: -2px;
	}
}

.mobile {
	top: 15px;
	right: 15px;
	width: 300px;
	margin-right: 0;

	& ul {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
	}

	& ul li {
		margin-bottom: 27px;
		font-weight: 700;
		font-size: 1.125rem;
		line-height: 1.5625rem;
		color: #03244E;

		&:first-child {
			margin-bottom: 35px;
		}
		& a {
			text-decoration: none;
		}
	}
}